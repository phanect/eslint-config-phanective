{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "lib": [ "esnext" ],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "esnext",
    "declaration": true,
    "alwaysStrict": true,
    "newLine": "lf",
    "removeComments": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": [ "**/*.js", "**/*.mjs", "**/*.ts", "**/*.mts" ],
  "exclude": [
    "dist",
    "node_modules",

    "./tests/configs.test.ts", // TODO Fix this file after ESLint 9 is released and flat config is GA.
  ]
}
