{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "lib": [ "esnext" ],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "esnext",
    "declaration": true,
    "alwaysStrict": true,
    "newLine": "lf",
    "removeComments": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": [ "**/*.js", "**/*.mjs", "**/*.ts", "**/*.mts" ],
  "exclude": [
    "dist",
    "node_modules",
    "tests/fixtures/invalid/*.js", // Invalid JS fixtures raises some ESLint errors, and it may cause type errors too.
  ]
}
